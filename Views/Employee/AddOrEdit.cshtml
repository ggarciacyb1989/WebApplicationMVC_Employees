@model WebApplicationMVC_Employees.Models.Employee
@{
    ViewData["Title"] = "AddOrEdit";
}

<!--jQuery Library-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<!--To work with jQuery Widgets-->
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<style type="text/css">
    .required label:after {
        content: " *";
        font-weight: bold;
        color: red;
        display: inline;
    }
</style>

<h2>Employee Form</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="AddOrEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <div class="form-group col-md-5">
                    <div class="required">
                        <label asp-for="FName" ></label>
                    </div>
                    <div>
                        <input asp-for="FName" class="form-control" />
                    </div>
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <div class="required">
                        <label asp-for="LName" class="control-label"></label>
                    </div>
                    <div>
                        <input asp-for="LName" class="form-control" />
                    </div>
                    <span asp-validation-for="LName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <div class="required">
                        <label asp-for="Department" class="control-label"></label>
                    </div>
                    <div>
                        <select asp-for="Department" asp-items="@Model.DepartmentsList" class="form-control"></select>
                    </div>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-group col-md-1">
                    <div class="required">
                        <label asp-for="Sex" class="control-label"></label>
                    </div>
                    <div>
                        <input asp-for="Sex" class="form-control" />
                    </div>
                    <span asp-validation-for="Sex" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <div class="required">
                        <label asp-for="Edad" class="control-label"></label>
                    </div>
                    <div>
                        <input asp-for="Edad" class="form-control" />
                    </div>
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Cedula" class="control-label"></label>
                    <input asp-for="Cedula" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Salario" class="control-label"></label>
                    <input asp-for="Salario" class="form-control" />
                </div>
                <div class="form-group col-md-5">
                    <div class="required">
                        <label asp-for="FechaReg" class="control-label"></label>
                    </div>
                    <div>
                        <input asp-for="FechaReg" id="datepicker" class="form-control" />
                    </div>
                </div>
            </div>
            <br />
            <div class="form-row">
                <div class="form-group col-md-5">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-5">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(function () {
            $("#datepicker").datepicker();
        });
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
